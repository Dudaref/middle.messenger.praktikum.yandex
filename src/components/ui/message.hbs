<div class="message {{classNames}} {{#if message.read}} myMessage {{/if}}">
    {{#if message.content.text}}
        {{> typography classNames="message-text size-12 regular color-dark-100" label=message.content.text }}
    {{/if}}
    {{#if message.content.media}}
        <img class="message-media" src={{message.content.media}} />
    {{/if}}
    <div class="message_bottom flex-center">
    {{#if message.read}}
        <svg class="mr-4" width="11" height="5" viewBox="0 0 11 5" fill="none" xmlns="http://www.w3.org/2000/svg">
            <line y1="-0.5" x2="3.765" y2="-0.5" transform="matrix(0.705933 0.708278 -0.705933 0.708278 0.700195 2.33313)" stroke="#3369F3"/>
            <line y1="-0.5" x2="5.6475" y2="-0.5" transform="matrix(0.705933 -0.708278 0.705933 0.708278 3.35828 5)" stroke="#3369F3"/>
            <line y1="-0.5" x2="5.6475" y2="-0.5" transform="matrix(0.705933 -0.708278 0.705933 0.708278 6.01587 5)" stroke="#3369F3"/>
        </svg>
    {{/if}}
    {{> typography classNames="size-12 regular color-dark-100" label=message.time }}
    </div>
</div>